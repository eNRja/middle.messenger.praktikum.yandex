@import url("../vendor/fonts/fonts.pcss");
@import url("./variables.pcss");
@import url("../partials/list-column/list-column.pcss");
@import url("../partials/chat-column/chat-column.pcss");
@import url("../partials/user-chat/user-chat.pcss");
@import url("../partials/messages/messages.pcss");
@import url("../pages/Profile/profile.pcss");
@import url("../pages/Login/login.pcss");
@import url("../pages/Registration/registration.pcss");
@import url("../pages/EditDetails/edit-details.pcss");
@import url("../pages/EditPassword/edit-password.pcss");
@import url("../pages/Error/error.pcss");
