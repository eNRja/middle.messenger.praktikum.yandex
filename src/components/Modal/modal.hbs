<div class="popup">
  <div class="popup__modal">
    {{{escButton}}}
    <h2 class="popup__title">{{title}}</h2>
    <form id="file" class="popup__form">
      {{#if changeAvatarBool}}
        {{{selectFileInput}}}
        {{{changeButton}}}
      {{/if}}
      {{#if changeChatAvatarBool}}
        {{{selectFileInput}}}
        {{{changeChatAvatarButton}}}
      {{/if}}
      {{#if addUserBool}}
        {{{actionInput}}}
        {{{addUserButton}}}
      {{/if}}
      {{#if deleteUserBool}}
        {{{actionInput}}}
        {{{deleteUserButton}}}
      {{/if}}
      {{#if createNewChatBool}}
        {{{inputTitle}}}
        {{{createChatButton}}}
      {{/if}}
      {{#if deleteChatBool}}
        {{{inputDeleteChat}}}
        {{{deleteChatButton}}}
      {{/if}}
    </form>
    {{#if error}}
      <p class="popup__error">{{error}}</p>
    {{/if}}
  </div>
  {{{modalOverlay}}}
</div>